# AI Job Application Assistant Environment Configuration

# Application Settings
APP_NAME="AI Job Application Assistant"
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

POSTGRESQL_URL=postgresql://user:password@localhost:5432/job_assistant
REDIS_URL=redis://localhost:6379

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=job-assistant-vectors

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# External APIs
LINKEDIN_API_KEY=your-linkedin-api-key
GITHUB_TOKEN=your-github-token
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Web Scraping Configuration
USER_AGENT="AI Job Application Assistant Bot 1.0"
REQUEST_DELAY=1
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
RELOAD_ON_CHANGE=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Production Settings (set to false in development)
USE_SSL=false
SECURE_COOKIES=false