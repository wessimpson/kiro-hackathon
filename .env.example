# AI Job Application Assistant Environment Variables

# Application Settings
APP_NAME="AI Job Application Assistant"
DEBUG=false

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

POSTGRESQL_URL=postgresql://user:password@localhost:5432/job_assistant
REDIS_URL=redis://localhost:6379

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=job-assistant-vectors

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
LINKEDIN_API_KEY=your-linkedin-api-key
GITHUB_TOKEN=your-github-token

# Social Media Scraping (Optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Job Board APIs (Optional)
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key
LINKEDIN_JOBS_API_KEY=your-linkedin-jobs-api-key

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Development Settings
RELOAD=true
HOST=0.0.0.0
PORT=8000